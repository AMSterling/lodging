<%= form_with url: '/hotels', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br/>
  <%= form.label :city %>
  <%= form.text_field :city %><br/>
  <%= form.label :booked %>
  <%= form.select :booked, options_for_select([false, true]) %><br/>
  <%= form.label :capacity %>
  <%= form.text_field :capacity %><br/>
  <%= form.submit 'Create Hotel'%>
<% end %>
