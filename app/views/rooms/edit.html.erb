<%= form_with url: "/rooms/#{@room.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br/>
  <%= form.label :occupied %>
  <%= form.select :occupied, options_for_select([false, true]) %><br/>
  <%= form.label :guest_count %>
  <%= form.text_field :guest_count %><br/>
  <%= form.submit 'Update Room'%>
<% end %>
